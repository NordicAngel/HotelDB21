@page
@model RazorPageHotelApp.Pages.Hotels.CreateModel
@{
}

<h3>Lav et nyt Hotel</h3>

@if (Model.ErrorMsg != null)
{
    <span style="color: red">@Model.ErrorMsg</span>
}

<form method="post">
    <div class="form-group">
        <label asp-for="Hotel.HotelNr" class="control-lable"></label>
        <input asp-for="Hotel.HotelNr" class="form-control"/>
    </div>
    <div class="form-group">
        <label asp-for="Hotel.Navn" class="control-lable"></label>
        <input asp-for="Hotel.Navn" class="form-control"/>
    </div>
    <div class="form-group">
        <label asp-for="Hotel.Adresse" class="control-lable"></label>
        <input asp-for="Hotel.Adresse" class="form-control"/>
    </div>
    <input type="submit" class="btn btn-secondary"/>
</form>